[flake8]
# Following the coding guidelines for Python/Flask projects
max-line-length = 127
max-complexity = 10

# Ignore specific error codes
ignore = E203,E501,W503,F401

# Exclude directories
exclude = .git,__pycache__,venv,.pytest_cache,htmlcov,models,.github

# Select specific error codes to check
select = E,W,F,C

# Per-file ignores
per-file-ignores =
    tests/*:F401,F811
    scripts/*:F401